@model CIAB.Models.ChangePasswordFromUserDetailsPage
@{
    ViewBag.Title = "Password Reset";
    Layout = "~/Views/_LayoutCIAB.cshtml";
}

<div id="about_top">
    <div class="container">
        <div class="row signup_login">
            <div class="col-md-6 col-md-offset-3 signup_left">
                <div class="header_wrap">
                    <h3>Forgot Your Password</h3>
                </div>
                @using (Html.BeginForm("PasswordResetPage", "ResetPassword", new { UniqueID = @Request.QueryString["UniqueID"] }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        <label for="forgotPassword">Please input New Password<span class="req">*</span></label>
                        @Html.PasswordFor(t => t.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(o => o.Password)
                    </div>

                    <div class="form-group">
                        <label for="forgotPassword">Please Confirm New Password<span class="req">*</span></label>
                        @Html.PasswordFor(t => t.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(o => o.ConfirmPassword)
                    </div>

                    <button type="submit" class="btn btn-default btn-block btn-cta">Reset Password</button>
                }
                <!--Register Form Ends Here-->
            </div><!-- /about_header -->
        </div>
    </div>
</div>

