@model CIAB.Models.OrderDetailsPage
@{
    ViewBag.Title = "OrderDetail";

}

@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@Scripts.Render("~/bundles/modernizr")
@Styles.Render("~/Content/kendo/css")
@Scripts.Render("~/bundles/kendo")
@Styles.Render("~/Content/css")

@*<script src="~/Scripts/jquery-1.8.3.min.js"></script>
    <script src="~/Scripts/jquery.bxslider.js"></script>
    <script src="~/Scripts/jquery.royalslider.min.js"></script>*@
<script src="~/Scripts/kendo/kendo.web.min.js"></script>
<script src="~/Scripts/kendo.aspnetmvc.min.js"></script>
<script src="~/Scripts/kendo.all.min.js"></script>


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/font-awesome.css" rel="stylesheet" />
<link href="~/Content/colorbox.css" rel="stylesheet" />
<link href="~/Content/royalslider.css" rel="stylesheet" />
<link href="~/Content/skins/default/rs-default.css" rel="stylesheet" />
<link href="~/Content/custom.css" rel="stylesheet" />
<link href="~/Content/style.css" rel="stylesheet" />
@{Html.EnableClientValidation(true);}


<div class="modal-header">
    <h4>Purchase Request Details</h4>
</div>
<div class="modal-body" style="padding:40px 50px;">
    @{
        TempData["OrderDetail"] = Model;// pass the Model to controller
    }
    <div class="bg-info">
        <div class="form-horizontal admin_form">
            <div class="form-group">
                <p class="col-sm-3 admin_title">Request ID:</p>
                <div class="col-sm-9">
                    <p><strong>@Model.OrderId</strong></p>
                </div>
            </div>
            <div class="form-group">
                <p class="col-sm-3 admin_title">Email:</p>
                <div class="col-sm-9">
                    <p><strong>@Model.Email</strong></p>
                </div>
            </div>
            <div class="form-group">
                <p class="col-sm-3 admin_title">Company:</p>
                <div class="col-sm-9">
                    <p><strong>@Model.CompanyName</strong></p>
                </div>
            </div>
            <div class="form-group">
                <p class="col-sm-3 admin_title">Solutions:</p>
                <div class="col-sm-9">
                    <p><strong>@Model.ProductName</strong></p>
                </div>
            </div>


            <div class="form-group">
                <!--Upload File 1 Starts-->
                <div class="col-sm-offset-3 col-sm-9">
                    <span>Upload report:</span>
                    <div style="width:50%">
                        @using (Html.BeginForm("OrderReport1", "OrderDetails", new { orderNumber = @Model.OrderId }, FormMethod.Post))
                        {
                            @(Html.Kendo().Upload()
                               .Name("OrderReportFile1")
                               .Multiple(false)
                               .HtmlAttributes(new { accept = ".pdf, .PDF" })
                               .Messages(m => m.Select("Select .PDF file"))

                            )
                            <p>
                                <input type="submit" value="Upload Report 1" class="btn btn-danger" />
                            </p>
                        }
                      
                        <iframe src="@Url.Action("ShowDocument1", "OrderDetails", new {OrderNumber = @Model.OrderId, FileName = "File1" })" style="width:500px; height:500px;" frameborder="0"></iframe>


                        <span style="color:red">@ViewBag.UploadMessageFile1 </span>
                    </div>
                </div><!--Upload File 1 Ends-->




                <div class="form-group">
                    <!--Upload File 2 Starts-->
                    <div class="col-sm-offset-3 col-sm-9">
                        <span>Upload report:</span>
                        <div style="width:50%">
                            @using (Html.BeginForm("OrderReport2", "OrderDetails", new { orderNumber = @Model.OrderId }, FormMethod.Post, new { style = "50px;" }))
                            {
                                @(Html.Kendo().Upload()
                               .Name("OrderReportFile2")
                               .Multiple(false)
                               .HtmlAttributes(new { accept = ".pdf, .PDF" })
                               .Messages(m => m.Select("Select .PDF file"))
                                )
                                <p>
                                    <input type="submit" value="Upload Report 2" class="btn btn-danger" />
                                </p>
                                <iframe src="@Url.Action("ShowDocument2", "OrderDetails", new {OrderNumber = @Model.OrderId, FileName = "File2"})" style="width:500px; height:500px;" frameborder="0"></iframe>
                                <span style="color:red">@ViewBag.UploadMessageFile2 </span>
                            }
                        </div>
                    </div>
                </div> <!--Upload File 2 Ends-->




                <div class="form-group">
                    <!--Upload File 3 Starts-->
                    <div class="col-sm-offset-3 col-sm-9">
                        <span>Upload report:</span>
                        <div style="width:50%">
                            @using (Html.BeginForm("OrderReport3", "OrderDetails", new { orderNumber = @Model.OrderId }, FormMethod.Post))
                            {
                                @(Html.Kendo().Upload()
                               .Name("OrderReportFile3")
                               .Multiple(false)
                               .HtmlAttributes(new { accept = ".pdf, .PDF" })
                               .Messages(m => m.Select("Select .PDF file"))
                                )
                                <p>
                                    <input type="submit" value="Upload Report 3" class="btn btn-danger" />
                                </p>
                            }
                            <span style="color:red">@ViewBag.UploadMessageFile3</span>
                            <iframe src="@Url.Action("ShowDocument3", "OrderDetails", new {OrderNumber = @Model.OrderId, FileName = "File3" })" style="width:500px; height:500px;" frameborder="0"></iframe>

                        </div>
                    </div>
                </div>     <!--Upload File 3 Ends-->
            </div>
        </div>
