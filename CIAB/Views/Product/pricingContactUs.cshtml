@model CIAB.Models.EmailFrom

<div>

    <div id="sub_header" style="margin-top:-10px;">
        <div class="container">
            <div class="row">
                <div class="col-md-12 mart_header">
                    <h1 class="contact_new">
                        Contact Us
                        <span>For more information about the pricing of the product, kindly leave your particulars below and we will contact you shortly.</span>
                    </h1>
                </div><!-- /about_header -->
            </div>
        </div>
    </div><!-- /sub_header -->
</div>
    <div id="sub_content">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    @using (Html.BeginForm("pricingContactUs", "Product", FormMethod.Post))
                    {@Html.AntiForgeryToken()


                        <form data-toggle="validator" role="form" class="form-horizontal">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Name <span class="req">*</span></label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="inputName" id="inputName" placeholder="Name" data-error="Please enter your name" required>
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Email <span class="req">*</span></label>
                                <div class="col-sm-10">
                                    <input type="email" name="inputEmail" id="inputEmail" class="form-control" placeholder="Email" data-error="Email address is invalid" required>
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Subject</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" placeholder="Subject" name="Subject" id="Subject">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Product</label>
                                <div class="col-sm-10">
                                    <select class="form-control" name="optProduct" id="optProduct">
                                        <option>Select product</option>
                                        <option>Vulnerability Scan</option>
                                        <option>Website Defacement Monitoring</option>
                                        <option>Email Threat Monitoring</option>
                                        <option>Cyber Security Health Check</option>
                                    </select>
                                </div>
                                <div class="help-block with-errors"></div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" style="margin-top:10px">Message</label>
                                <div class="col-sm-10" style="margin-top:10px">
                                    <textarea class="form-control" rows="7" placeholder="Message" id="Message" name="Message"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="submit" class="btn btn-default btn-cta btn-thanks">Send Message</button>
                                </div>
                            </div>
                        </form> }
                  
                      
                    
                     @if (ViewData["smtpError"] != null)
                       {
                           Response.Write(ViewData["smtpError"]);
                       }
  

                </div>
                <div class="col-md-6 contact_details">
                    <div class="row">
                        <div class="col-md-1">
                            <span class="fa-stack fa-lg">
                                <i class="fa fa-circle fa-stack-2x"></i>
                                <i class="fa fa-map-marker fa-stack-1x fa-inverse"></i>
                            </span>
                        </div>
                        <div class="col-md-11">
                            <h4>Where to reach us</h4>
                            <p>
                                You can reach us at the following address:<br />
                                <strong>16 Raffles Quay #22-00, Hong Leong Building, Singapore</strong>
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-1">
                            <span class="fa-stack fa-lg">
                                <i class="fa fa-circle fa-stack-2x"></i>
                                <i class="fa fa-envelope fa-stack-1x fa-inverse"></i>
                            </span>
                        </div>
                        <div class="col-md-11">
                            <h4>EMAIL US</h4>
                            <p>Email your issues and suggestion to: <strong>cybersecurity@kpmg.com.sg</strong></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-1">
                            <span class="fa-stack fa-lg">
                                <i class="fa fa-circle fa-stack-2x"></i>
                                <i class="fa fa-phone fa-stack-1x fa-inverse"></i>
                            </span>
                        </div>
                        <div class="col-md-11">
                            <h4>Need to call us?</h4>
                            <p>From Monday to Friday, 9AM - 6 PM, call us at: (+65) 6213 3388</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- /sub_header -->
    <div id="contact_map">
        <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script><div style="overflow:hidden;height:500px;width:100%;">
            <div id="gmap_canvas" style="height:500px;width:100%;"></div>
            <style>
                #gmap_canvas img {
                    max-width: none !important;
                    background: none !important;
                }
            </style>
        </div>
        <script type="text/javascript"> function init_map() { var myOptions = { zoom: 14, center: new google.maps.LatLng(1.281577, 103.850907), mapTypeId: google.maps.MapTypeId.ROADMAP }; map = new google.maps.Map(document.getElementById("gmap_canvas"), myOptions); marker = new google.maps.Marker({ map: map, position: new google.maps.LatLng(1.281577, 103.850907) }); infowindow = new google.maps.InfoWindow({ content: "<b>KPMG</b><br/>16 Raffles Quay #22-00, Hong Leong Building, Singapore<br/> Singapore" }); google.maps.event.addListener(marker, "click", function () { infowindow.open(map, marker); }); infowindow.open(map, marker); } google.maps.event.addDomListener(window, 'load', init_map);</script>
    </div><!-- /about_header -->


    <div id="bottom_cta">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <h2>KPMG Cyber Security Health Check</h2>
                </div>
                <div class="col-md-4">
                    <a href="@Url.Action("CyberHealthSignUp", "Home")" onclick='location.href=this.getAttribute("href")' type="button" class="btn btn-default btn-cta btn-block"><i class="fa fa-search"></i> &nbsp;Get Your FREE Scan Now!</a>
                </div>

            </div>
        </div>
    </div><!-- bottom_cta -->

   