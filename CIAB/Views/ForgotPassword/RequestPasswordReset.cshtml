@model CIAB.Models.UserForgotPassword
@{
    ViewBag.Title = "Forgot Password";
}



<div id="about_top">
    <div class="container">
        <div class="row signup_login">
            <div class="col-md-6 col-md-offset-3 signup_left">

                <div class="header_wrap">
                    <h3>Forgot Your Password?</h3>

                </div>

                @using (Html.BeginForm("RequestPasswordReset", "ForgotPassword", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)


                    <div class="form-group">
                        <label for="forgotPassword">Please Input Your Email Address<span class="req">*</span></label>
                        @Html.TextBoxFor(t => t.email, new {@class = "form-control" })
                        @Html.ValidationMessageFor(o => o.email)
                        @Html.ValidationMessage("@ViewBag.EmailSentMessage")
                    </div>

                    <button type="submit" class="btn btn-default btn-block btn-cta">Submit</button>
                }
                <!--Register Form Ends Here-->
            </div><!-- /about_header -->
        </div>
    </div>
</div>



